# MusicNerdNG Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SPOTIFY API CONFIGURATION
# =============================================================================
# Get these from https://developer.spotify.com/dashboard
# Create a new app and add http://localhost:3000/api/auth/callback/spotify to redirect URIs
NEXT_PUBLIC_SPOTIFY_WEB_CLIENT_ID=your_spotify_client_id_here
NEXT_PUBLIC_SPOTIFY_WEB_CLIENT_SECRET=your_spotify_client_secret_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Supabase PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
SUPABASE_DB_CONNECTION=postgresql://username:password@host:port/database

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# NextAuth.js configuration
# Generate a random string for production: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# AI SERVICES
# =============================================================================
# OpenAI API key for AI features
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# DISCORD INTEGRATION (Optional)
# =============================================================================
# Discord webhook URL for notifications
# Create a webhook in your Discord server settings
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# =============================================================================
# COVERAGE REPORTING (Optional)
# =============================================================================
# Discord webhook for test coverage reports
DISCORD_COVERAGE_URL=https://discord.com/api/webhooks/your_coverage_webhook_url_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'development', 'production', or 'test'
NODE_ENV=development

# =============================================================================
# CI/CD SETTINGS (For GitHub Actions)
# =============================================================================
# These are automatically set in GitHub Actions secrets
# CODECOV_TOKEN=your_codecov_token_here